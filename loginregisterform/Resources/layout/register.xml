<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/size45"
        android:layout_marginTop="@dimen/size72"
        android:layout_marginRight="@dimen/size14"
     >
        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:text="@string/reg"
                android:textColor="@color/blue"
                android:textSize="@dimen/scale35"
                android:padding="@dimen/size0"
            />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:text="@string/ter"
                android:textColor="@color/skyblue"
                android:textSize="@dimen/scale35"
                android:padding="@dimen/size0"
            />
     </LinearLayout>


    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
             android:layout_marginLeft="@dimen/size45"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/alreadys"
                android:padding="@dimen/size0"
                android:textSize="@dimen/scale15"
             />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/size6"
                android:text="@string/SUB"
                android:textColor="@color/lightread"
                android:textSize="@dimen/scale15"
                android:id="@+id/newaccount"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/size48"
        android:layout_marginTop="@dimen/size25"
        android:layout_marginRight="@dimen/size48">
     <EditText
        android:id="@+id/editextnameuser"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size47"
        android:drawablePadding="@dimen/size16"
        android:hint="@string/name"
        android:inputType="textPersonName"
        android:background="@drawable/broder"
        android:drawableLeft="@drawable/persons"
        android:paddingHorizontal="@dimen/size10"
         android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz"
       />
        <EditText
         android:id="@+id/edittextemailaddress"
         android:layout_marginTop="@dimen/size10"
         android:layout_width="match_parent"
         android:layout_height="@dimen/size47"
         android:drawablePadding="@dimen/size16"
         android:hint="@string/email"
         android:inputType="textEmailAddress"
         android:background="@drawable/broder"
         android:drawableLeft="@drawable/mail"
         android:paddingHorizontal="@dimen/size10"
        
        />
        <EditText
         android:id="@+id/edittextusernames"
         android:layout_width="match_parent"
         android:singleLine="true"
         android:layout_marginTop="@dimen/size10"
         android:layout_height="@dimen/size47"
         android:drawablePadding="@dimen/size16"
         android:gravity="center_vertical"
         android:hint="@string/user"
         android:inputType="text"
         android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz"
         android:background="@drawable/broder"
         android:drawableLeft="@drawable/persons"
         android:paddingHorizontal="@dimen/size10"
       
        />
        <EditText
         android:id="@+id/edittextpassword"
         android:imeOptions="actionNext"
         android:layout_marginTop="@dimen/size10"
         android:layout_width="match_parent"
         android:layout_height="@dimen/size47"
         android:drawablePadding="@dimen/size16"
         android:hint="@string/password"
         android:inputType="textPassword"
         android:background="@drawable/broder"
         android:drawableLeft="@drawable/key"
         android:paddingHorizontal="@dimen/size10"
        />
    </LinearLayout>
    <com.google.android.material.button.MaterialButton
        android:text="@string/register"
        android:layout_width="@dimen/size200"
        android:layout_height="wrap_content"
        android:inputType="textCapWords"
        android:layout_gravity="center"
        android:id="@+id/registerbutton"
        android:padding="@dimen/size10"
        android:backgroundTint="@color/darkblue"
        android:textSize="@dimen/scale17"
        android:layout_marginTop="@dimen/size45"
        app:cornerRadius="@dimen/size50"
         />
    <TextView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="@dimen/size20"
         android:text="@string/otheroption"
         android:textSize="@dimen/scale20"
         android:layout_marginLeft="@dimen/size90"
         android:layout_gravity="center_horizontal"/>

    
   <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:gravity="center_horizontal"
           android:layout_marginTop="@dimen/size25"
      >
        <ImageView
            android:layout_width="@dimen/size60"
            android:layout_height="@dimen/size50"
            android:src="@drawable/facebook"
            android:id="@id/imageviewfacebook"
           
            />
        <ImageView
            android:layout_width="@dimen/size60"
            android:layout_height="@dimen/size50"
            android:layout_marginStart="@dimen/size16"
            android:src="@drawable/google"
            android:id="@+id/imageeviewgoogle"
           
            />




    </LinearLayout>



</LinearLayout>